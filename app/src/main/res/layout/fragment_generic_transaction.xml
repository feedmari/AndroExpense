<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".single_group_menu.GenericTransactionFragment"
    android:weightSum="1"
    android:background="@color/bg_register">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Type of transaction"
            android:id="@+id/textView3"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:layout_weight="0.10"
            android:textAllCaps="true"
            android:textColor="@color/white" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/typeET"
            android:layout_margin="10dp"
            android:background="@color/input_register_bg"
            android:padding="10dp"
            android:textColor="@color/input_register"
            android:textColorHint="@color/input_register_hint" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:layout_weight="0.98">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Details"
            android:id="@+id/textView7"
            android:layout_gravity="center_horizontal"
            android:textAllCaps="true"
            android:layout_margin="10dp"
            android:textColor="@color/white" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/detailET"
            android:layout_weight="0.67"
            android:gravity="top"
            android:background="@color/input_register_bg"
            android:layout_margin="10dp"
            android:textColor="@color/input_register"
            android:padding="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Cost"
            android:id="@+id/costTW"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:textColor="@color/white" />

        <EditText
            android:layout_width="189dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/costET"
            android:layout_gravity="center_horizontal"
            android:background="@color/input_register_bg"
            android:padding="10dp"
            android:textColor="@color/input_register"
            android:textColorHint="@color/input_register_hint"
            android:hint="$"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="25dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/genericLL"
        android:gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button1"
            android:id="@+id/genericButton"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:textColor="@color/white"
            android:background="@color/bg_login" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button2"
            android:id="@+id/genericButton2"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            android:background="@color/bg_login"
            android:padding="10dp"
            android:layout_margin="10dp" />
    </LinearLayout>

</LinearLayout>
